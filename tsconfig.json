{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "target": "ES2019",
    "noErrorTruncation": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "ts-node": { "esm": true }
}
